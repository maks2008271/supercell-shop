# ============================================
# TELEGRAM BOT
# ============================================
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# ID администраторов (через запятую)
ADMIN_IDS=123456789,987654321

# ============================================
# ССЫЛКИ
# ============================================
REVIEWS_CHANNEL=https://t.me/YourReviewsChannel
NEWS_CHANNEL=@YourNewsChannel
SUPPORT_URL=https://t.me/YourSupport
OFFER_URL=https://telegra.ph/Your-Offer

# ============================================
# WATA.PRO (СБП ОПЛАТА)
# ============================================
# 1. Зайди в https://merchant.wata.pro/
# 2. Перейди в раздел Терминалы -> Ключи
# 3. Скопируй JWT токен
#
# ВАЖНО! В ЛК wata.pro укажите:
# Webhook URL: https://your-domain.ru/webhook/wata
# Success Page: https://your-domain.ru/payment/success
# Fail Page: https://your-domain.ru/payment/fail
#
WATA_API_TOKEN=YOUR_WATA_JWT_TOKEN
WATA_SANDBOX=false

# Публичный URL для webhook (ваш домен)
WEBHOOK_BASE_URL=https://your-domain.ru

# ============================================
# PRODUCTION SETTINGS
# ============================================
# Включить production режим (строгая валидация, меньше логов)
PRODUCTION=false

# ============================================
# НАСТРОЙКИ ПРОИЗВОДИТЕЛЬНОСТИ
# ============================================
# Размер пула соединений к БД (10-20 для production)
DB_POOL_SIZE=15

# TTL кэша товаров в секундах (300-600 для production)
PRODUCTS_CACHE_TTL=300

# Включить gzip сжатие ответов API
API_COMPRESSION=true

# ============================================
# RATE LIMITING
# ============================================
# Максимум запросов в минуту на IP
RATE_LIMIT_PER_MINUTE=120

# Максимум запросов в секунду (burst)
RATE_LIMIT_BURST=20

# ============================================
# МЕДИА ФАЙЛЫ
# ============================================
CATEGORY_BRAWLSTARS_MEDIA=brawlstars.png
CATEGORY_CLASHROYALE_MEDIA=clashroyale.png
CATEGORY_CLASHOFCLANS_MEDIA=clashofclans.png

# ============================================
# ФОНОВЫЕ ЗАДАЧИ
# ============================================
# Включить проверку статуса платежей (на случай если webhook не дошел)
ENABLE_PAYMENT_CHECKER=false

# Режим checker:
# off - checker выключен
# monitor - только проверка/логирование (без смены статусов, без рассылки)
# sync - обновляет статусы, но без отправки сообщений
# sync_notify - обновляет статусы и отправляет уведомления
PAYMENT_CHECKER_MODE=off

# Legacy-флаги (оставлены для совместимости)
ENABLE_PAYMENT_CHECKER_AUTO_CONFIRM=false
ENABLE_PAYMENT_CHECKER_NOTIFY=false
